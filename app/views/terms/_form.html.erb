<%= simple_form_for(@term) do |f| %>
  <%= f.input :year, prompt: "Enter School Year", :collection => ['2015','2016','2017','2018'], label: "SCHOOL YEAR"  %>
  <%= f.input :term, :collection => ['1','2','3','4'], prompt: "Enter Term", label: "TERM" %>
  <%= f.input :startdate, as: :date, 
          start_year: Date.today.year, 
          end_year: Date.today.year + 5, 
          default: Date.today.beginning_of_year,
          order: [ :day, :month, :year], 
          label: "START DATE" %>
  <%= f.input :enddate, :as => :date, 
          :start_year => Date.today.year, 
          :end_year => Date.today.year + 5,
          default: Date.today.beginning_of_year,
          :order => [ :day, :month, :year], 
          :label => 'END DATE' %>
  <%= f.input :active, label: "Active Term", as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.button :submit, :id => "button" %>
<% end %>
