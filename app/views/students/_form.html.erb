<%= simple_form_for(@student,html: { autocomplete: 'off' }) do |f| %>
  <%= f.input :firstname, label: "First Name", placeholder: "Enter First Name" %>
  <%= f.input :surname, label: "Surname", placeholder: "Enter Surname" %>
  <%= f.input :dob, label: "Date of Birth", as: :date, start_year: Date.today.year - 18, end_year: Date.today.year - 6, order: [:day, :month, :year] %>

  <div class="row">
    <div class="col-md-6">
      <h3>GRADES</h3>
        <div id="grades">
          <%= f.simple_fields_for :grades do |grades| %>
            <%= render 'grade_fields', f: grades %>
          <% end %>
          <br>
          <div class="links">
            <%= link_to_add_association 'Add Grade', f, :grades, id: "button" %>
          </div>
        </div>
      </div>
    </div>
  <br>
  <%= f.button :submit, :id => "button"  %> <br>
<% end %>