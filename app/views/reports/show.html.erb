<h3>RESULTS FOR <%= @report.student.firstname.upcase + " " + @report.student.surname.upcase + ", TERM " + @report.term.term + " " + @report.term.year %></h3>

<%= simple_form_for(@report) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div id="results">
        <table class="table">
          <thead>
            <th class="col-md-3">Subject</th>
            <th class="col-md-1">Mark1</th>
            <th class="col-md-1">Mark2</th>
            <th class="col-md-5">Comment</th>
            <th class="col-md-1">  </th>
          </thead>
          <tbody id="result_fields">
            <%= f.simple_fields_for :results, :html => { :class => 'form-horizontal' } do |results| %>
              <%= render 'result_fields', f: results %>
            <% end %>
            <br>
          </tbody>
        </table>
        <div class="links">
          <%= link_to_add_association 'Add Result', f, :results, id: "button" %>
        </div>
      </div>
    </div>
  </div>
<div class="form-actions">
  <%= f.button :submit, :id => "button" %>
</div>
<% end %>
<br>
<%= link_to 'Back', reports_path %>